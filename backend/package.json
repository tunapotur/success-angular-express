{
  "name": "backend",
  "version": "1.0.0",
  "description": "success express backend",
  "license": "ISC",
  "author": "Tuna POTUR",
  "type": "commonjs",
  "main": "server.js",
  "scripts": {
    "lint": "eslint",
    "build": "export NODE_ENV=production&&nodemon server.js",
    "build:win": "set NODE_ENV=production&&nodemon server.js",
    "css:build": "postcss styles/styles.css -o public/css/style.css",
    "js:build": "esbuild ./public/js/index.js --bundle --outfile=./public/js/bundle.js --loader:.png=dataurl",
    "all:build": "concurrently \"npm run build\" \"npm run css:build\" \"npm run js:build\"",
    "all:build:win": "concurrently \"npm run build:win\" \"npm run css:build\" \"npm run js:build\"",
    "start": "export NODE_ENV=development&&nodemon server.js",
    "start:win": "set NODE_ENV=development&&nodemon server.js",
    "css:watch": "postcss styles/styles.css -o public/css/style.css --watch",
    "js:watch": "esbuild ./public/js/index.js --bundle --outfile=./public/js/bundle.js --loader:.png=dataurl --watch",
    "all:start": "concurrently --kill-others \"npm run start\" \"npm run css:watch\" \"npm run js:watch\"",
    "all:start:win": "concurrently --kill-others \"npm run start:win\" \"npm run css:watch\"  \"npm run js:watch\""
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "esbuild": "0.25.6",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.3.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.13"
  },
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "@exortek/express-mongo-sanitize": "^1.1.0",
    "@tailwindcss/postcss": "^4.1.11",
    "autoprefixer": "^10.4.21",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.1.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "express-xss-sanitizer": "^2.0.0",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongoose": "^8.16.2",
    "morgan": "^1.10.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-nested": "^7.0.2",
    "postcss-strip-inline-comments": "^0.1.5",
    "pug": "^3.0.3",
    "slugify": "^1.6.6",
    "tailwindcss": "^4.1.11",
    "validator": "^13.15.15"
  }
}
