extends base

block content
  div(class="flex flex-col flex-wrap m-2 text-gray-700")
    //- Header Section
    div(class=" flex flex-col flex-wrap justify-between gap-4 border-b-1 border-gray-300 pb-4")
      h1(class="text-center font-mono text-2xl font-semibold tracking-tight") User Profile Page

      div(class="flex flex-row justify-between items-center")
        div(class="flex flex-col leading-none")
          span(class="font-semibold text-right text-lg italic")= `${userInfo.name} ${userInfo.surname}` 
          span(class="font-light italic")= userInfo.email

        a(href=`/${userInfo._id}/user-success-list`) 
          svg(class="size-[3rem] fill-gray-600")
            use(xlink:href="../img/icons.svg#icon-list-ul-solid")

    //- About Section
    div(class="mx-1 mt-5 mb-6 text-justify indent-4 text-lg")= userInfo.about